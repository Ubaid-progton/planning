<div class="container">
  <%= form_with(model: schedule) do |form| %>
    <% if schedule.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

        <ul>
          <% schedule.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="col-lg-3">
    <div class="form-group">
      <%= form.label :start_date, style: "display: block",class: 'mb-2' %>
      <%= form.date_field :start_date, class: 'form-control form-control-lg rounded-0' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group">
      <%= form.label :project_details, style: "display: block",class: 'mb-2' %>
      <%= form.text_field :project_details, class: 'form-control form-control-lg rounded-0' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group">
      <%= form.label :task_assigned, style: "display: block",class: 'mb-2' %>
      <%= form.text_field :task_assigned, class: 'form-control form-control-lg rounded-0' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group">
      <%= form.label :task_status, style: "display: block",class: 'mb-2' %>
      <%= form.text_field :task_status, class: 'form-control form-control-lg rounded-0' %>
    </div>
  </div>

  <div class="col-lg-3">
    <div class="form-group">
      <%= form.label :deadline, style: "display: block",class: 'mb-2' %>
      <%= form.date_field :deadline, class: 'form-control form-control-lg rounded-0' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div><div class="form-group">
      <%= form.label :description, style: "display: block",class: 'mb-2' %>
      <%= form.text_area :description,class: 'form-control form-control-sm rounded-0' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 mt-4">
      <%= form.submit class: "btn btn-primary btn-sm mt-2 mb-2 rounded-0" %>
      <%= link_to "Back to Schedules", schedules_path, class: "btn btn-outline_success btn-sm rounded-0" %>
    </div>
  </div>
  <% end %>
</div>
