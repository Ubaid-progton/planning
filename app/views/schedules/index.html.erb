<div class="col-lg-12">
  <div class="card rounded-0 mt-5 mb-5">
    <div class="card-body">
      <h2 class="text-center">Listing Schedule</h2>
    </div> 
  </div>

<p style="color: green"><%= notice %></p>
<%=link_to "New schedule", new_schedule_path, class: "btn btn-primary btn-sm mb-4" %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Start Date</th>
      <th>Project Details</th>
      <th>Task Assigned</th>
      <th>Status</th>
      <th>Deadline</th>
      <th>Description</th>
      <th colspan="7">Actions</th>
    </tr>
  <thead>
  <tbody>


  <div id="schedules">
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.start_date %></td>
        <td><%= schedule.project_details %></td>
        <td><%= schedule.task_assigned %></td>
        <td><%= schedule.task_status %></td>
        <td><%= schedule.deadline %></td>
        <td><%= schedule.description %></td>
        <td><%= link_to "view", schedule, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to "Edit", edit_schedule_path(schedule),class: 'color;green', class: "btn btn-success btn-sm" %></td>
        <td><%= button_to "Delete", schedule, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
   </tbody>

</table>
  
  
</div>

 
